<!--  
    This is the hibernate mapping configuration for the SystemEvent Class -> Table
 -->
<hibernate-mapping>
     
    <class
        name="org.ikasan.framework.systemevent.model.SystemEvent"
        table="SystemEvent">

        <id name="id" type="java.lang.Long" column="Id">
            <generator class="identity" />
        </id>
        <property name="subject"        type="java.lang.String" 
                  column="Subject"      not-null="true" />
        <property name="action"     type="java.lang.String" 
                  column="Action"   not-null="true" />
        <property name="actor"            type="java.lang.String" 
                  column="Actor"          not-null="false" />
        <property name="timestamp"     type="java.util.Date" 
                  column="Timestamp"   not-null="true" />
        <property name="expiry"     type="java.util.Date" 
                  column="Expiry"   not-null="false" />

    </class>
    
</hibernate-mapping>